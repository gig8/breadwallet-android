<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_intro_set_pit"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/extra_light_blue_background"
    tools:context="com.breadwallet.presenter.activities.SetPinActivity">

    <View
        android:id="@+id/view3"
        android:layout_width="400dp"
        android:layout_height="285dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/splash_tall"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title" />

    <com.breadwallet.presenter.customviews.BRText
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/bread_margin"
        android:layout_marginTop="32dp"
        android:text="@string/About.title"
        android:textColor="@color/almost_black"
        android:textSize="@dimen/header"
        app:customTFont="CircularPro-Bold.otf"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/policy_text"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view4"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/textDiscord"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <View
        android:id="@+id/view5"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginBottom="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginStart="16dp"
        android:background="@color/extra_light_gray"
        app:layout_constraintBottom_toTopOf="@+id/textInstagram"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.breadwallet.presenter.customviews.BRText
        android:id="@+id/textTwitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="0dp"
        android:text="@string/About.twitter"
        android:textSize="18sp"
        app:customTFont="CircularPro-Book.otf"
        app:layout_constraintBottom_toTopOf="@+id/view5"
        app:layout_constraintLeft_toLeftOf="@+id/divider1" />

    <com.breadwallet.presenter.customviews.BRText
        android:id="@+id/textInstagram"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/About.instagram"
        android:textSize="18sp"
        app:customTFont="CircularPro-Book.otf"
        app:layout_constraintBottom_toTopOf="@+id/view4"
        app:layout_constraintLeft_toLeftOf="@+id/divider1" />

    <com.breadwallet.presenter.customviews.BRText
        android:id="@+id/textDiscord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:text="@string/About.discord"
        android:textSize="18sp"
        app:customTFont="CircularPro-Book.otf"
        app:layout_constraintBottom_toTopOf="@+id/divider1"
        app:layout_constraintLeft_toLeftOf="@+id/divider1" />


    <ImageView
        android:id="@+id/twitter_share_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginTop="0dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/textTwitter"
        app:layout_constraintRight_toRightOf="@+id/view5"
        app:layout_constraintTop_toTopOf="@+id/textTwitter" />

    <ImageView
        android:id="@+id/instagram_share_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/textInstagram"
        app:layout_constraintRight_toRightOf="@+id/view4"
        app:layout_constraintTop_toTopOf="@+id/textInstagram" />

    <ImageView
        android:id="@+id/discord_share_button"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:src="@drawable/ic_share"
        app:layout_constraintBottom_toBottomOf="@+id/textDiscord"
        app:layout_constraintRight_toRightOf="@+id/divider1"
        app:layout_constraintTop_toTopOf="@+id/textDiscord" />

    <com.breadwallet.presenter.customviews.BRText
        android:id="@+id/policy_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="8dp"
        android:alpha="0.8"
        android:text="@string/About.privacy"
        android:textColor="@color/dark_blue"
        android:textSize="16sp"
        app:customTFont="CircularPro-Book.otf"
        app:layout_constraintBottom_toTopOf="@+id/info_text"
        app:layout_constraintHorizontal_bias="0.525"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <com.breadwallet.presenter.customviews.BRText
        android:id="@+id/info_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="@string/About.footer"
        app:customTFont="CircularPro-Book.otf"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>
